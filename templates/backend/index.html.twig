{% extends 'base.html.twig' %}

{% form_theme form 'layout/form/card.html.twig' %}

{% block body %}

    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-6">
            {{ form_errors(form) }}

            <div class="row">
                {% for i in 0..maxIndex %}
                    <div class="col-xl-4 col-lg-6 mb-4">
                        {% include 'backend/card.html.twig' with {i:i, form:form} %}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="col-md-2">
            {% include 'backend/manage-card.html.twig' with {form:form, user:user} %}
        </div>
   </div>

    {{ form_end(form) }}

{% endblock %}
