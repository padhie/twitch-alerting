<div class="container">
    {%  for error in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible" role="alert">{{ error }}</div>
    {% endfor %}

    {%  for info in app.flashes('info') %}
        <div class="alert alert-info alert-dismissible" role="alert">{{ info }}</div>
    {% endfor %}

    {%  for warning in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible" role="alert">{{ warning }}</div>
    {% endfor %}

    {%  for success in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible" role="alert">{{ success }}</div>
    {% endfor %}
</div>
