{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-5">

        <div class="row">

            <div class="col-xl-6">
                <div class="card border border-primary">
                    <div class="card-body">
                        <h5 class="card-title">{% trans %}page.home.tutorial.title{% endtrans %}</h5>
                        <p class="card-text">{% trans %}page.home.tutorial.text{% endtrans %}</p>
                        <a href="{{ path('tutorial') }}" class="btn btn-primary">
                            {% trans %}page.home.tutorial.link{% endtrans %}
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-xl-6">
                <div class="card border border-twitch">
                    <div class="card-body">
                        <h5 class="card-title">{% trans %}page.home.login.title{% endtrans %}</h5>
                        <p class="card-text">{% trans %}page.home.login.text{% endtrans %}</p>
                        <a href="{{ path('login') }}" class="btn btn-twitch">
                            {% trans %}page.home.login.link{% endtrans %}
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
